{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": ["node_modules/@types"],
        "lib": ["dom", "esnext"],
        "baseUrl": ".",
        "removeComments": true,
        "rootDir": ".",
        "paths": {
            "@mp/*": ["./vendor/spryker/spryker/Bundles/*/mp.public-api.ts"],
            "@mp/polyfills": [
                "./vendor/spryker/spryker/Bundles/ZedUi/src/Spryker/Zed/ZedUi/Presentation/Components/mp.polyfills.ts"
            ],
            "*": ["*"],
            "ShopUi/*": ["./vendor/spryker/spryker-shop/Bundles/ShopUi/src/SprykerShop/Yves/ShopUi/Theme/default/*"]
        }
    },
    "include": [
        "./vendor/spryker/spryker/**/*",
        "./vendor/spryker/spryker-shop/**/*",
        "./vendor/spryker-eco/**/*",
        "./src/Pyz/Yves/**/*",
        "./src/Pyz/Zed/**/*"
    ],
    "exclude": ["**/node_modules/**", "**/*.spec.ts", "public", "dist", "**/dist/**"]
}
