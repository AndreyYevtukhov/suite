{% extends view('product-color-group-widget', '@SprykerShop:ProductColorGroupWidget') %}

{% block body %}
    <pre>{{ dump(data.product) }}</pre>
    {% embed molecule('product-item-color-selector', 'ProductColorGroupWidget') with {
        modifiers: ['center'],
        data: {
            items: data.product,
        },
    } only %}
        {% block body %}
            <hr>{{ parent() }}<hr>
        {% endblock %}
    {% endembed %}
{% endblock %}
