{% extends view('product-quick-add', '@SprykerShop:ProductSearchWidget') %}

{% define data = {
    options: {
        action: path('cart/async/quick-add'),
    },
    providerClassName: '',
} %}

{% block body %}
    {% set formModifiers = data.verticalLayout ? [] : ["row"] %}
    {% include molecule('product-quick-add-form', 'ProductSearchWidget') with {
        class: "grid grid--middle",
        modifiers: formModifiers,
        data: {
            title: data.title,
            form: data.form,
            options: data.options,
            submitButtonTitle: data.submitButtonTitle,
            verticalLayout: data.verticalLayout
        },
        attributes: {
            'provider-class-name': data.providerClassName,
        },
    } only %}

    <hr>
{% endblock %}
